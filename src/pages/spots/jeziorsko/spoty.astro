---
import { Layout } from "../../../components/Layout";
import { Head } from "../../../components/Head";

const navLinks = [
  { href: '/', label: 'Kite Łódź', isActive: false },
  { href: '/spots/jeziorsko/', label: 'Jeziorsko', isActive: true }
];
const subNav = [
  { href: '/spots/jeziorsko/popow', label: 'Popów', isActive: false },
  { href: '/spots/jeziorsko/popow-polanka', label: 'Popów polanka', isActive: false },
  { href: '/spots/jeziorsko/wylazlow', label: 'Wylazłów', isActive: false },
  { href: '/spots/jeziorsko/brodnia-tama', label: 'Brodnia tama', isActive: false },
  { href: '/spots/jeziorsko/brodnia-cypel', label: 'Brodnia cypel', isActive: false },
  { href: '/spots/jeziorsko/ostrow', label: 'Ostrów Warcki', isActive: false },
  { href: '/spots/jeziorsko/zaspy', label: 'Zaspy', isActive: false },
  { href: '/spots/jeziorsko/milkowice', label: 'Miłkowice', isActive: false },
  { href: '/spots/jeziorsko/skarpa', label: 'Skarpa', isActive: false }
];
---

<html lang="en" class="h-full">
  <head>
    <Head title="Spoty - Jeziorsko" />
  </head>
  <body class="h-full">
    <Layout navLinks={navLinks} desktopSubNav={subNav} mobileSubNav={subNav}>
      <div class="flex flex-col">
        <div class="w-full relative">
          <div id="map" class="h-[75vh] md:h-[45rem] w-full"></div>
          <button
            id="reset-map"
            class="absolute top-2 right-2 bg-white p-2 rounded-md shadow-md text-textColor hover:bg-gray-100 z-[1000]"
          >
            Reset
          </button>
        </div>
      </div>
    </Layout>

    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossOrigin=""
    />
    <script
      src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
      integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
      crossOrigin=""></script>

    <script>
      import "../../../main.js";
    </script>
  </body>
</html>
