---
import { Layout } from "../components/Layout";
import { Head } from "../components/Head";

const navLinks = [
  { href: "/", label: "Kite Łódź", isActive: true },
  { href: "/spots/jeziorsko/", label: "Jeziorsko", isActive: false },
  { href: "/kontakt", label: "Kontakt", isActive: false },
];
const desktopSubNav = [];

const mobileSubNav = [];
---

<html lang="en" class="h-full">
  <head>
    <Head title="Kite Spots" />
  </head>
  <body class="h-full">
    <Layout
      desktopSubNav={desktopSubNav}
      mobileSubNav={mobileSubNav}
    >


      <!-- Content Section: Image first on mobile, Image on Left, Tiles on Right on desktop -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-8 items-start">
        <!-- Decorative Image on Left (first on mobile) -->
        <div class="lg:order-1 lg:sticky lg:top-0 relative">
          <img
            src="/assets/surfer.webp"
            alt="kitesurfer"
            class="w-full h-full object-cover rounded-2xl"
            loading="lazy"
          />
          <div class="absolute top-4 right-8 text-textColor text-xl lg:text-5xl drop-shadow-lg">
            Witaj na Kite Łódź
          </div>
        </div>

        <!-- Featured Highlights Tiles -->
        <div class="lg:order-2 space-y-4">
           <div
             class="p-6 bg-white bg-opacity-70 rounded-2xl shadow-lg"
           >
             <h3 class="text-xl mb-2">Spoty</h3>
            <p class="text-gray-700 mb-4">
              Poznaj sekrety lokalnych spotów i unikaj niebezpieczeństw.
              Doświadczenie i wiedza to klucz do udanych sesji.
            </p>
            <a
              href="/spots/jeziorsko"
              class="inline-block font-montserrat uppercase font-semibold bg-transparent border-2 border-textColor text-textColor py-2 px-4 rounded hover:bg-textColor hover:text-white transition-colors text-sm"
            >
              Jeziorsko
            </a>
          </div>
           <div
             class="p-6 bg-white bg-opacity-70 rounded-2xl shadow-lg"
           >
             <h3 class="text-xl mb-2">Aktualna Pogoda</h3>
            <p class="text-gray-700 mb-4">
              Sprawdź prognozę wiatru i warunki atmosferyczne przed wyjściem na
              wodę. Bezpieczeństwo przede wszystkim!
            </p>
            <a
              href="/spots/jeziorsko/pogoda"
              class="inline-block font-montserrat uppercase font-semibold bg-transparent border-2 border-textColor text-textColor py-2 px-4 rounded hover:bg-textColor hover:text-white transition-colors text-sm"
            >
              Pogoda Jeziorsko
            </a>
          </div>

           <div
             class="p-6 bg-white bg-opacity-70 rounded-2xl shadow-lg"
           >
             <h3 class="text-xl mb-2">Kontakt</h3>
            <p class="text-gray-700 mb-4">
              Masz pytania lub chcesz się podzielić wiedzą? Skontaktuj się ze
              mną lub lokalną społecznością.
            </p>
            <a
              href="/kontakt"
              class="inline-block font-montserrat uppercase font-semibold bg-transparent border-2 border-textColor text-textColor py-2 px-4 rounded hover:bg-textColor hover:text-white transition-colors text-sm"
            >
              Kontakt
            </a>
          </div>
        </div>
      </div>
    </Layout>
  </body>
</html>

<script>
  import "../main.js";
</script>
