const navLinks = [
  { href: '/', label: 'Kite Łódź', isActive: true },
  { href: '/spots/jeziorsko/', label: 'Jeziorsko', isActive: false }
];
---

<html lang="en" class="h-full">
  <head>
    <Head title="Kite Spots" />
  </head>
  <body class="h-full">
    <Layout navLinks={navLinks}>
      <div class="w-full h-full flex justify-center items-center">
        <img
          src="/assets/surfer.webp"
          alt="kitesurfer"
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    </Layout>
  </body>
</html>

<script>
